<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetTop="-1dp">
    <shape>
        <solid android:color="@color/imperial_core_light_grey" />
        <stroke
            android:width="1dp"
            android:color="@color/imperial_core_cool_grey" />
        <padding
            android:bottom="@dimen/login_field_padding"
            android:left="@dimen/login_field_padding"
            android:right="@dimen/login_field_padding"
            android:top="@dimen/login_field_padding" />
        <!-- android:radius="1dp" needed to get 0dp radius bottom -->
        <corners
            android:bottomLeftRadius="@dimen/login_field_radius"
            android:bottomRightRadius="@dimen/login_field_radius"
            android:radius="1dp"
            android:topLeftRadius="0dp"
            android:topRightRadius="0dp" />
    </shape>
</inset>