<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/imperial_core_light_grey" />
    <stroke
        android:width="1dp"
        android:color="@color/imperial_core_cool_grey" />
    <padding
        android:bottom="@dimen/login_field_padding"
        android:left="@dimen/login_field_padding"
        android:right="@dimen/login_field_padding"
        android:top="@dimen/login_field_padding" />
    <!-- android:radius="1dp" needed to get 0dp radius bottom -->
    <corners
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp"
        android:radius="1dp"
        android:topLeftRadius="@dimen/login_field_radius"
        android:topRightRadius="@dimen/login_field_radius" />
</shape>